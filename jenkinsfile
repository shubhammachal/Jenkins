pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh maven 'clean compile'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn exec:java -Dexec.mainClass="HelloWorld"'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            
            }
        }
    }
    
    post {
        success {
            echo 'Java application built and executed successfully!'
        }
        failure {
            echo 'build or execution failed!'
        }
    }
}