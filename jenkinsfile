pipeline {
    agent any

    tools{
        maven 'maven3.6.3'
        jdk 'JDK 11'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('src/main/java') {
                    sh 'mvn clean install'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn exec:java -Dexec.mainClass="HelloWorld"'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            
            }
        }
    }
    
    post {
        success {
            echo 'Java application built and executed successfully!'
        }
        failure {
            echo 'build or execution failed!'
        }
    }
}